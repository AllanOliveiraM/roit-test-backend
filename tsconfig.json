{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es6", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNEXT",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./src/",
    "noImplicitAny": true,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts"]
}
